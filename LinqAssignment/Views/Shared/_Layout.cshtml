<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <title>@ViewBag.Title - Linq Assignment</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@{ 
    var pageName = ViewContext.RouteData.Values["action"].ToString();
}

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    @*C# can't have dashes in properties (aria-current)*@
                    <div class="@(pageName == "Index" ? "nav-item active" :"nav-item")">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    </div>
                    <div class="@(pageName == "Queries" ? "nav-item active" :"nav-item")">
                        @Html.ActionLink("LINQ Queries", "GetCarInfo", "CarInfo", null, new { @class = "nav-link" })
                    </div>
                    
                </div>
                </div>
        </div>
    </nav>
   
    <div class="container body-content">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Linq Assignment</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
